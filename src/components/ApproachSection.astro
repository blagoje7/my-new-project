---
import { useTranslations } from '../i18n/utils';
const { lang = 'sr' } = Astro.props;
const t = useTranslations(lang);
---

<section id="approach" class="section">
    <div class="cards-container">
        <div class="approach-card">
            <div class="card-content">
                <h3 set:html={t('approach.title')} />
                <ul class="approach-bullets">
                    <li>{t('approach.bullet1')}</li>
                    <li>{t('approach.bullet2')}</li>
                    <li>{t('approach.bullet3')}</li>
                </ul>
                <p set:html={t('approach.description')} />
                <br />
                <p set:html={t('approach.description2')} />
            </div>
        </div>
        
        <div class="approach-card">
            <div class="card-content">
                <h3 set:html={t('onlineTherapy.title')} />
                <ul class="approach-bullets">
                    <li>{t('onlineTherapy.bullet1')}</li>
                    <li>{t('onlineTherapy.bullet2')}</li>
                    <li>{t('onlineTherapy.bullet3')}</li>
                </ul>
            </div>
        </div>

        <div class="approach-card">
            <div class="card-content">
                <h3 set:html={t('therapy.title')} />
                <ul class="approach-bullets">
                    <li><span set:html={t('therapy.duration')} /></li>
                    <li><span set:html={t('therapy.initialMeeting')} /></li>
                    <li><span set:html={t('therapy.firstSession')} /></li>
                    <li><span set:html={t('therapy.furtherWork')} /></li>
                </ul>
            </div>
        </div>
    </div>
</section>


