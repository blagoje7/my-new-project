---
import { useTranslations } from '../i18n/utils';

interface Props {
    lang: 'sr' | 'en' | 'nl';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="process" class="section">
    <h2>{t('therapy.title')}</h2>
    <div class="process-steps">
        <div class="step">
            <p>{t('therapy.duration')}</p>
        </div>
        <div class="step">
            <p>{t('therapy.initialMeeting')}</p>
        </div>
        <div class="step">
            <p>{t('therapy.firstSession')}</p>
        </div>
        <div class="step">
            <p>{t('therapy.furtherWork')}</p>
        </div>
    </div>

    <div class="important-info">
        <p class="policy">
            {t('therapy.confidentiality')}
        </p>
        <p class="tools">
            {t('therapy.platform')}
        </p>
    </div>
</section>

