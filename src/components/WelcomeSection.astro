---
import { useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';

const { lang = 'sr' } = Astro.props;
const t = useTranslations(lang);

// Define the image dimensions and metadata
const imageProps = {
    src: '/IMG_16832.jpg',
    width: 600,    // More appropriate width for the layout
    height: 800,   // Maintaining aspect ratio
    format: 'jpg',
    alt: t('header.name')
};
---

<section id="welcome" class="section">
    <h1 class="main-title">{t('header.title')}</h1>
    
    <div class="welcome-content">
        <div class="profile-section">
            <Image 
                src={imageProps.src}
                alt={imageProps.alt}
                width={imageProps.width}
                height={imageProps.height}
                class="profile-image"
                quality={90}
                format="webp"
                loading="eager"
                style="object-fit: cover; display: block; max-width: 100%; height: auto;"
            />
        </div>
        
        <div class="info-section">
            <div class="credentials-card">
                <h2 class="name" set:html={t('header.name')} />
                <div class="credentials-list">
                    <p class="credential" set:html={t('header.credentials.role1')} />
                    <p class="credential" set:html={t('header.credentials.role2')} />
                    <p class="credential" set:html={t('header.credentials.role3')} />
                </div>
            </div>
            
            <div class="intro-card">
                <p set:html={t('intro.description')} />
            </div>
        </div>
    </div>
</section>


