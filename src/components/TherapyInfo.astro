---
import { useTranslations } from '../i18n/utils';
const { lang = 'sr' } = Astro.props;
const t = useTranslations(lang);
---

<section id="online-therapy" class="section">
    <h2>{t('onlineTherapy.title')}</h2>
    <p>{t('onlineTherapy.description')}</p>

    <div class="for-whom">
        <h2>{t('forWhom.title')}</h2>
        <ul>
            {t('forWhom.issues').map((issue: string) => (
                <li>{issue}</li>
            ))}
        </ul>
    </div>
</section>

