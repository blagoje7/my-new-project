---
import { useTranslations } from '../i18n/utils';
const { lang = 'sr' } = Astro.props;
const t = useTranslations(lang);
---

<section id="contact" class="section">
    <h1>{t('contact.title')}</h1>

    <div class="contact-methods">
        <p class="instructions">{t('contact.instructions')}</p>

        <form 
            class="contact-form" 
            action="https://formspree.io/f/xzzkbnqo" 
            method="POST"
        >
            <!-- Formspree configuration -->
            <input type="hidden" name="_next" value={`${Astro.url.origin}/${lang}/thank-you`} />
            <input type="hidden" name="_subject" value="New Contact Form Submission" />
            <input type="text" name="_gotcha" style="display:none" />
            <input type="hidden" name="_template" value="table" />
            <div class="form-group">
                <label for="name">{t('contact.form.name')} * <span class="required">({t('contact.form.required')})</span></label>
                <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
                <label for="email">{t('contact.form.email')} * <span class="required">({t('contact.form.required')})</span></label>
                <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
                <label for="phone">{t('contact.form.phone')}</label>
                <input type="tel" id="phone" name="phone" />
            </div>

            <div class="form-group">
                <label for="message">{t('contact.form.message')} * <span class="required">({t('contact.form.required')})</span></label>
                <textarea id="message" name="message" required></textarea>
            </div>

            <button type="submit">{t('contact.form.submit')}</button>
        </form>

        <div class="alternative-contact">
            <p>{t('contact.languages')}</p>
        </div>
    </div>
</section>

