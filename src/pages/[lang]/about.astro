---
import Layout from '../../layouts/Layout.astro';
import AboutMe from '../../components/AboutMe.astro';
import { useTranslations, languages } from '../../i18n/utils';

export function getStaticPaths() {
    return Object.keys(languages).map(lang => ({
        params: { lang }
    }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof languages);
---

<Layout title={`Dr Tamara Medovarski - ${t('nav.about')}`} lang={lang as keyof typeof languages}>
    <div class="page-container">
        <div class="content-wrapper">
            <h1 class="page-title" set:html={t('biography.title')} />
            <section class="content-section">
                <AboutMe lang={lang as keyof typeof languages} />
            </section>
        </div>
    </div>
</Layout>