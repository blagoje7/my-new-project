---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { useTranslations, languages } from '../../i18n/utils';

export function getStaticPaths() {
    return Object.keys(languages).map(lang => ({
        params: { lang }
    }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof languages);
---

<Layout title={`${t('thankYou.title')} - Dr Tamara Medovarski`} lang={lang as keyof typeof languages}>
    <div class="container">
        <Breadcrumbs currentPath={Astro.url.pathname} lang={lang as keyof typeof languages} />
        
        <div class="thank-you-container">
            <h1 class="page-title">{t('thankYou.title')}</h1>
            <div class="content-box">
                <p class="message">{t('thankYou.message')}</p>
                <p class="follow-up">{t('thankYou.followUp')}</p>
                <a href={`/${lang}`} class="back-home">
                    {t('thankYou.backHome')}
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .thank-you-container {
        max-width: 600px;
        margin: 2rem auto;
        text-align: center;
    }

    .content-box {
        padding: 2rem;
        background-color: var(--light-bg);
        border-radius: 12px;
        border: 1px solid var(--primary-color);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .message {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        color: var(--primary-color);
    }

    .follow-up {
        font-size: 1rem;
        margin-bottom: 2rem;
        color: var(--text-color);
    }

    .back-home {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        transition: all var(--transition-speed) ease;
    }

    .back-home:hover {
        background-color: var(--link-hover);
        transform: translateY(-2px);
    }
</style>